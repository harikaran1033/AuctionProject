{
  "rewrites": [
    { "source": "/socket.io/:path*", "destination": "/socket.io/:path*" },
    { "source": "/api/:path*",      "destination": "/api/:path*" },
    { "source": "/_next/:path*",    "destination": "/_next/:path*" },
    { "source": "/static/:path*",   "destination": "/static/:path*" },

    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
